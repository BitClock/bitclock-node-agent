{
  "name": "bitclock-agent",
  "version": "0.1.0-beta.2",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/BitClock/bitclock-node-agent.git"
  },
  "author": {
    "name": "Bernard McManus",
    "email": "bernard.mcmanus.iv@gmail.com",
    "url": "https://github.com/BitClock"
  },
  "homepage": "https://bitclock.io",
  "engines": {
    "node": ">=4"
  },
  "main": "dist/agent.js",
  "bin": {
    "bitclock": "dist/index.js"
  },
  "scripts": {
    "build": "npm run build:babel && npm run build:link",
    "build:babel": "babel lib -d dist --source-maps inline",
    "build:clean": "rimraf dist coverage .nyc_output .test_output",
    "build:link": "echo \"require('./dist/register')\" > ./register.js",
    "lint": "eslint . --color --ignore-path .gitignore",
    "lint:staged": "lint-staged",
    "prebuild": "npm run build:clean",
    "prepublish": "npm run build",
    "pretest": "npm run lint && npm run build:clean && cd test/bitclock-agent-test-process && npm i",
    "test": "cross-env NODE_ENV=test BITCLOCK_ENV=test BLUEBIRD_DEBUG=1 nyc mocha --timeout=20000 --colors --compilers js:babel-register test/index"
  },
  "lint-staged": {
    "*.js": "lint"
  },
  "pre-commit": "lint:staged",
  "dependencies": {
    "bitclock": "^0.7.0-beta.2",
    "bluebird": "^3.5.0",
    "colors": "^1.1.2",
    "core-js": "^2.4.1",
    "decomment": "^0.9.0",
    "glob": "^7.1.2",
    "js-yaml": "^3.9.0",
    "lodash.once": "^4.1.1",
    "lodash.padstart": "^4.6.1",
    "source-map-support": "^0.4.15",
    "winston": "^2.3.1",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "babel-cli": "^7.0.0-alpha.12",
    "babel-eslint": "^8.0.0-alpha.13",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-transform-export-extensions": "^7.0.0-alpha.12",
    "babel-plugin-transform-object-rest-spread": "^7.0.0-alpha.12",
    "babel-preset-env": "^2.0.0-alpha.12",
    "babel-register": "^7.0.0-alpha.12",
    "chai": "^4.1.0",
    "cross-env": "^5.0.1",
    "eslint": "^3.5.0",
    "eslint-plugin-import": "^2.2.0",
    "lint-staged": "^3.0.2",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "nock": "^9.0.14",
    "nyc": "^11.0.3",
    "pre-commit": "^1.1.3",
    "rimraf": "^2.6.0",
    "sinon": "^2.3.6",
    "spawn-require": "^0.1.0",
    "uuid": "^3.1.0"
  }
}
